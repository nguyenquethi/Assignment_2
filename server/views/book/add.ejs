<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>  

<!-- content for the Add page -->

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">User Name</label>
                    <input type="text" class="form-control" 
                    id="nameTextField" 
                    placeholder="Enter the user name"
                    name="name" required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Password</label>
                    <input type="password" class="form-control" 
                    id="numberTextField" 
                    placeholder="Enter the Password"
                    name="number" required>
                </div>

                <br>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i>Login</button>

                    <a href="/book-list" class="btn btn-warning"><i class="fas fa-undo"></i>Cancel</a>
            </form>

        </div>
    </div>
</div>

